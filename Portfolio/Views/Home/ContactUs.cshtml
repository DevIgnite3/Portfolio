@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/contact-us.css" rel="stylesheet"/>
    
</head>
<body>

    <!-- TOP SECTION / BANNER -->
    <div class="top-section">
        <h2 class="section-title">Contact Us</h2>
        <h2>Make a change for the better</h2>
    </div>

 <!-- FULL CONTAINER WRAPPER -->
<div class="contact-wrapper">
    <div class="contact-container">

        <!-- LEFT COLUMN: FORM -->
        <div class="contact-form-section">
            
            <form id="contactForm">
                <div class="input-row">
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name*" required>
                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name*" required>
                </div>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email*" required>
                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone Number*" required>
                <textarea class="form-control" id="message" name="message" rows="4" placeholder="Your message..." required></textarea>
                <button type="submit" class="btn-primary">Send Message</button>
            </form>
        </div>

        <!-- RIGHT COLUMN: INFO -->
        <div class="contact-info-section">
            <h3 class="title">Get in Touch with DevIgnite</h3>
            <p class="subtitle">Powering the next generation of developers</p>

            <div class="info-box">
                <h4><i class="fas fa-map-marker-alt text-warning"></i> Our Location</h4>
                <p>123 Innovation Street, DevCity, SA</p>
            </div>

            <div class="info-box">
                <h4><i class="fas fa-envelope text-warning"></i> Email Us</h4>
                <p>support@devignite.com</p>
            </div>

            <div class="info-box">
                <h4><i class="fas fa-phone text-warning"></i> Call Us</h4>
                <p>+27 123 456 789</p>
            </div>

            <div class="info-box">
                <h4><i class="fas fa-clock text-warning"></i> Office Hours</h4>
                <ul class="timings">
                    <li>Monday - Friday: 9AM - 6PM</li>
                    <li>Saturday - Sunday: Closed</li>
                </ul>
            </div>
        </div>

    </div>
</div>



    <!-- EMAILJS SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@4/dist/email.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            emailjs.init("9cvP5Kb4utHZF9F5f");
            document.getElementById('contactForm').addEventListener('submit', function (event) {
                event.preventDefault();
                emailjs.sendForm('service_6mitp6f', 'template_gflpa2k', this)
                    .then(function (response) {
                        alert('SUCCESS! Your message has been sent.');
                    }, function (error) {
                        alert('FAILED... Please try again.');
                    });
            });
        });
    </script>
</body>
</html>
