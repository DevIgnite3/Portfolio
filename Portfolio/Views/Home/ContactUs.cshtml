@{
    // Single-page, no separate layout
    Layout = "~/Views/Shared/_Layout.cshtml";

  
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #121212;
            color: #f5f5f5;
            font-family: Antonio, sans-serif;
        }

        .top-section {
            position: relative;
            padding: 5rem 2rem;
            color: #f5f5f5;
            background-size: cover;
            background-attachment: fixed;
            width: 100vw; /* Ensure it spans the entire viewport width */
            margin: 0; /* Remove any margin that might create gaps */
            left: 50%;
            transform: translateX(-50%); /* Center the section */
        }

            .top-section .content {
                position: relative;
                z-index: 2;
                padding: 3rem 2rem;
            }

            .top-section h1 {
                font-size: 5rem;
                font-weight: bold;
                text-transform: uppercase;
                font-family: Anton, sans-serif;
            }

            .top-section h3 {
                font-size: 2rem;
                font-weight: bold;
            }

            .top-section h4 {
                font-size: 1.75rem;
                font-weight: bold;
            }

            .top-section p.lead {
                font-size: 1.2rem;
                line-height: 1.6;
            }

        /* Form adjustments */
        #contactForm {
            background-color: #1d1d1d; /* Dark background to match Figma */
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
        }

        .form-control {
            background-color: white /* Darker input fields */
            color: white;
            border: none;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                background-color: #444;
                color: white;
                outline: none;
                box-shadow: 0 0 0 0.2rem rgba(255, 102, 0, 0.25); /* Light orange border on focus */
            }

        .btn-primary {
            background-color: #FF6600;
            border: none;
            padding: 0.75rem 1.5rem;
            font-weight: bold;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #B94A00;
            }

        .title {
            font-size: 1.75rem; /* Increase size for title */
            font-weight: bold;
        }

        .subtitle {
            font-size: 1.25rem; /* Increase size for subtitles */
            font-weight: normal;
            color: #f5f5f5;
        }

        .subtitle-bold {
            font-size: 1.5rem;
            font-weight: bold;
            color: #f5f5f5;
            margin-top: -10px; /* Align closer to the subtitle above */
        }

        .description {
            font-size: 1rem;
            color: #f5f5f5;
            margin: 1rem 0;
        }

        .timings {
            list-style-type: disc; /* Adds bullet points */
            padding-left: 1rem;
            font-size: 1rem;
            color: #f5f5f5;
            text-align: left; /* Align list items to the left for better readability */
        }

            .timings li {
                margin-bottom: 0.5rem; /* Add spacing between list items */
            }

        .info-box {
            background-color: #ffffff; /* White background for the boxes */
            border-radius: 15px; /* Rounded corners */
            transition: box-shadow 0.3s ease;
        }

            .info-box:hover {
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Subtle shadow on hover */
            }

            .info-box h4 {
                font-size: 1.25rem;
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
            }

            .info-box p {
                color: #666;
                font-size: 1rem;
            }

        .arrow-icon {
            font-size: 1.5rem;
            color: #333;
            margin-top: 15px;
        }

        /* Full-width map styling */
        .map-container {
            margin-top: 20px;
        }

            .map-container iframe {
                width: 100%;
                border: none;
                border-radius: 10px; /* Rounded corners for the map */
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            }
    </style>
</head>

<body>
    <!-- Top Section -->
    <div class="top-section text-center text-white" style="background-image: url('/images/ContactUs_title.png'); width: 100vw">
        <div class="content">
            
            <h1 >Contact Us</h1>
            <h2 style ="padding-bottom: 10%">Make a change for the better</h2>
            <div class="row align-items-center" style="background-color:##171717">

                <div class="col-md-6 d-flex justify-content-center">
                    <form id="contactForm" style="width: 100%; max-width: 500px;">
                        <div class="form-row">
                            <div class="col">
                                <input type="text" class="form-control form-control-lg mb-3" id="firstName" name="firstName" placeholder="First Name*" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control form-control-lg mb-3" id="lastName" name="lastName" placeholder="Last Name*" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control form-control-lg mb-3" id="email" name="email" placeholder="Email*" required>
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control form-control-lg mb-3" id="phone" name="phone" placeholder="Phone Number*" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control form-control-lg mb-3" id="message" name="message" rows="4" placeholder="Your message..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
                    </form>
                </div>
                <div class="col-md-6 text-center">
                    <h3 class="title" style="color: #FC670B;">Call Us, Write Us, or Knock on our door</h3>
                    <p class="subtitle">We’d Love for you to join the</p>
                    <p class="subtitle-bold">Alleysway family</p>
                    <p class="description">Looking to compete professionally? Want a personal trainer? Just looking to improve your fitness? Join Alleysway today. It’s the only way.</p>
                    <ul class="timings">
                        <li>Monday - Thursday: 5AM - 8PM</li>
                        <li>Friday: 5AM - 7PM</li>
                        <li>Saturday: 7AM - 12PM</li>
                        <li>Sunday: Closed</li>
                        <li>Public Holidays: 7AM - 12PM</li>
                    </ul>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@4/dist/email.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            emailjs.init("9cvP5Kb4utHZF9F5f");

            document.getElementById('contactForm').addEventListener('submit', function (event) {
                event.preventDefault();
                emailjs.sendForm('service_6mitp6f', 'template_gflpa2k', this)
                    .then(function (response) {
                        alert('SUCCESS! Your message has been sent.');
                    }, function (error) {
                        alert('FAILED... Please try again.');
                    });
            });
        });
    </script>
</body>
</html>
