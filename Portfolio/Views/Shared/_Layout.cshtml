@{
    // This layout has no parent—it's the final layout.
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevIgnite</title>

    <!-- Link to your CSS (fire animations, styling, etc.) -->
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />

    <!-- (Optional) jQuery if you need animations or expansions -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body style="height: 100%">
    <!-- Fire overlay if you want the glowing radial effect -->
    <div class="fire-overlay"></div>

    <!-- Normal, always-visible NAVBAR -->
    <!-- Fire-Themed Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a asp-controller="Home" asp-action="Index" class="logo">DevIgnite</a>
            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="Projects">Projects</a></li>
                <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                <li><a asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
            </ul>
            <div class="menu-toggle" onclick="toggleMenu()">&#9776;</div>
        </div>
    </nav>


    <!-- Child view content goes here -->
    <main>
        @RenderBody() <!-- Only the layout calls RenderBody() -->
    </main>

    <!-- Child views can inject scripts if needed -->
    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    function toggleMenu() {
        document.querySelector('.nav-links').classList.toggle('active');
    }
</script>
